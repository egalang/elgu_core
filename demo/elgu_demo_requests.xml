        <field name="stage_id" ref="elgu_core.stage_submitted"/>
        <field name="amount_total">25000</field>
        <field name="assigned_user_id" ref="base.user_admin"/>
    </record>

    <!-- RPT Payment -->
    <record id="req_rpt_1" model="elgu.request">
        <field name="request_type_id" ref="elgu_core.type_rpt_payment"/>
        <field name="applicant_id" ref="elgu_core.partner_juan"/>
        <field name="stage_id" ref="elgu_core.stage_paid"/>
        <field name="amount_total">5800</field>
        <field name="assigned_user_id" ref="base.user_admin"/>
    </record>

    <!-- Cedula -->
    <record id="req_cedula_1" model="elgu.request">
        <field name="request_type_id" ref="elgu_core.type_cedula"/>
        <field name="applicant_id" ref="elgu_core.partner_maria"/>
        <field name="stage_id" ref="elgu_core.stage_released"/>
        <field name="amount_total">120</field>
        <field name="assigned_user_id" ref="base.user_admin"/>
        <field name="decision">approved</field>
    </record>

    <!-- Birth Certificate -->
    <record id="req_birth_1" model="elgu.request">
