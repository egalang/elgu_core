<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Business Permit - New -->
    <record id="req_bp_new_1" model="elgu.request">
        <field name="request_type_id" ref="elgu_core.type_business_permit_new"/>
        <field name="applicant_id" ref="elgu_core.partner_kapetambay"/>
        <field name="stage_id" ref="elgu_core.stage_assessment"/>
        <field name="amount_total">3500</field>
        <field name="assigned_user_id" ref="base.user_admin"/>
        <field name="reference_no_external">QC-BP-2026-0001</field>
    </record>

    <!-- Documents checklist for BP New -->
    <record id="req_bp_new_1_doc1" model="elgu.request.document">
        <field name="request_id" ref="elgu_core.req_bp_new_1"/>
        <field name="requirement_id" ref="elgu_core.req_valid_id"/>
        <field name="is_required">True</field>
        <field name="status">submitted</field>
    </record>
    <record id="req_bp_new_1_doc2" model="elgu.request.document">
        <field name="request_id" ref="elgu_core.req_bp_new_1"/>
        <field name="requirement_id" ref="elgu_core.req_barangay_clearance"/>
        <field name="is_required">True</field>
        <field name="status">submitted</field>
    </record>
    <record id="req_bp_new_1_doc3" model="elgu.request.document">
        <field name="request_id" ref="elgu_core.req_bp_new_1"/>
        <field name="requirement_id" ref="elgu_core.req_dti_sec"/>
        <field name="is_required">True</field>
        <field name="status">missing</field>
        <field name="remarks">Please upload DTI registration.</field>
    </record>

    <!-- Business Permit - Renewal -->
    <record id="req_bp_renew_1" model="elgu.request">
        <field name="request_type_id" ref="elgu_core.type_business_permit_renew"/>
        <field name="applicant_id" ref="elgu_core.partner_bayanitech"/>
        <field name="stage_id" ref="elgu_core.stage_payment"/>
        <field name="amount_total">12000</field>
        <field name="assigned_user_id" ref="base.user_admin"/>
        <field name="reference_no_external">QC-BP-2026-0042</field>
    </record>

    <!-- Building Permit -->
    <record id="req_bldg_1" model="elgu.request">
        <field name="request_type_id" ref="elgu_core.type_building_permit"/>
