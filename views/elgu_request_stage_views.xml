<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Views -->
    <record id="view_elgu_request_stage_list" model="ir.ui.view">
        <field name="name">elgu.request.stage.list</field>
        <field name="model">elgu.request.stage</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="name"/>
                <field name="is_initial"/>
                <field name="is_closed"/>
                <field name="fold"/>
            </list>
        </field>
    </record>

    <record id="view_elgu_request_stage_form" model="ir.ui.view">
        <field name="name">elgu.request.stage.form</field>
        <field name="model">elgu.request.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="is_initial"/>
                        <field name="is_closed"/>
                        <field name="fold"/>
                        <field name="require_payment_before_enter"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_elgu_request_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">elgu.request.stage</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_elgu_request_stage_view_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_elgu_request_stage_list"/>
        <field name="act_window_id" ref="action_elgu_request_stage"/>
    </record>

    <record id="action_elgu_request_stage_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_elgu_request_stage_form"/>
        <field name="act_window_id" ref="action_elgu_request_stage"/>
    </record>

</odoo>
