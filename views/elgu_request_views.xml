<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_elgu_request_list" model="ir.ui.view">
        <field name="name">elgu.request.list</field>
        <field name="model">elgu.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="request_type_id"/>
                <field name="applicant_id"/>
                <field name="stage_id"/>
                <field name="amount_total"/>
                <field name="invoice_id"/>
                <field name="payment_state"/>
                <field name="released_date"/>
                <field name="submitted_on"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_elgu_request_form" model="ir.ui.view">
        <field name="name">elgu.request.form</field>
        <field name="model">elgu.request</field>
        <field name="arch" type="xml">
            <form string="eLGU Request">
                <header>
                    <button name="action_submit"
                            type="object"
                            string="Submit"
                            class="btn-primary"
                            invisible="submitted_on"/>

                    <button name="action_create_invoice"
                            type="object"
                            string="Create Invoice"
                            invisible="invoice_id or amount_total &lt;= 0"/>

                    <field name="stage_id"
                           widget="statusbar"
                           options="{'clickable': True}"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="request_type_id"/>
                            <field name="applicant_id"/>
                            <field name="assigned_user_id"/>
                        </group>
                        <group>
                            <field name="submitted_on" readonly="1"/>
                            <field name="reference_no_external"/>
                            <field name="decision"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Fees &amp; Billing">
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_total"/>
                                <field name="invoice_id" readonly="1"/>
                                <field name="payment_state" readonly="1"/>
                            </group>
                        </page>

                        <page string="Documents">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="requirement_id"/>
                                    <field name="is_required"/>
                                    <field name="attachment_id" options="{'no_create': True}"/>
                                    <field name="status"/>
                                    <field name="remarks"/>
                                </list>
                            </field>
                        </page>

                        <page string="Internal Notes">
                            <field name="department_notes"/>
                            <field name="decision_notes"/>
                        </page>

                        <page string="Release">
                            <group>
                                <field name="released_date" readonly="1"/>
                                <field name="released_attachment_id"
                                       options="{'no_create': True}"
                                       help="Upload or select the final released document (PDF)."/>
                            </group>

                            <group string="Release Checks" colspan="2">
                                <field name="all_required_docs_accepted" readonly="1"/>
                                <field name="is_paid" readonly="1"/>
                                <field name="can_download_released" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_elgu_request" model="ir.actions.act_window">
        <field name="name">Requests</field>
        <field name="res_model">elgu.request</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_elgu_request_view_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_elgu_request_list"/>
        <field name="act_window_id" ref="action_elgu_request"/>
    </record>

    <record id="action_elgu_request_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_elgu_request_form"/>
        <field name="act_window_id" ref="action_elgu_request"/>
    </record>

</odoo>
